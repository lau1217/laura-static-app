{% extends '_templates/base.njk'%}

{%block content%}
<article class="container">
  <h1>Ships of the Golden Age of Pirates</h1>
  <p>Hellllooo.</p>
  <div class="row">
  {%for ship in pirates.ships%}
  <div class="col-sm-6 col-lg-4">
    <div class="card border-primary mb-4" style="max-width: 18rem;">
    <div class="card-header">{{ship.ship_name}} </div>
      <div class="card-body">
        <h6 class="card-title">{{ship.captain}}</h6>
        <p class="card-text">{{ship.blurb}}</p>
        <a href="{{ship.source}}" target="_blank">Source</a>
      </div>
    </div>
  </div>
  {%endfor%}
</div>
</article>
{%endblock%}
